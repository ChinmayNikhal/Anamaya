<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/rounded_rectangle_outline"
    android:padding="16dp"
    android:layout_marginBottom="12dp"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start|center_vertical"
        android:orientation="horizontal"
        android:padding="1dp">

        <TextView
            android:id="@+id/tvAppointmentTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2.5dp"
            android:fontFamily="@font/roboto_mono"
            android:text="10:30 AM"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/app_primary_teal"
            android:textSize="16sp"
            android:textStyle="bold" />

        <View
            android:id="@+id/view"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="10dp"
            android:background="#7C7A7A" />

        <TextView
            android:id="@+id/tvAppointmentDoctor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2.5dp"
            android:fontFamily="@font/roboto_mono"
            android:text="Dr. Smith"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/app_text_black" />
    </LinearLayout>

</LinearLayout>
