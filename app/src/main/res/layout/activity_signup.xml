<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash_background_gradient">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/signup_card"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.499">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="525dp"
            android:background="@drawable/rounded_rectangle_signup_card"
            android:backgroundTint="#EFFFFF"
            android:orientation="vertical"
            android:paddingVertical="12dp"
            android:paddingStart="18dp"
            android:paddingEnd="12dp">

            <!-- Title -->

            <!-- Member/Doctor Toggle -->
            <LinearLayout
                android:id="@+id/user_type_selector_container"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/selector_pill_outer_stroke"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/member_option_tv"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/selector_pill_left_segment_bg"
                    android:clickable="true"
                    android:focusable="true"
                    android:fontFamily="@font/roboto_mono"
                    android:gravity="center"
                    android:minHeight="48dp"
                    android:paddingVertical="6dp"
                    android:text="Member"
                    android:textColor="@color/selector_pill_text_color"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/doctor_option_tv"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/selector_pill_right_segment_bg"
                    android:clickable="true"
                    android:focusable="true"
                    android:fontFamily="@font/roboto_mono"
                    android:gravity="center"
                    android:minHeight="48dp"
                    android:paddingVertical="6dp"
                    android:text="Doctor"
                    android:textColor="@color/selector_pill_text_color"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:fillViewport="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="2.5dp">

                    <!-- Full Name -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/full_name_input_layout"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:hint="Full Name"
                        android:textColorHint="@color/app_primary_teal"
                        app:boxCornerRadiusBottomEnd="12dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/full_name_input_edittext"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/app_content_white"
                            android:fontFamily="@font/roboto_mono"
                            android:inputType="textPersonName"
                            android:textColor="@color/splash_primary_text"
                            android:textColorHighlight="@color/app_secondary_text_dark_grey"
                            android:textColorHint="@color/app_primary_teal" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Gender -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="@font/roboto_mono"
                        android:text="Gender"
                        android:textColor="@color/app_text_black"
                        android:textSize="16sp" />

                    <RadioGroup
                        android:id="@+id/gender_radio_group"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/radio_male"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="16dp"
                            android:background="@color/app_content_white"
                            android:fontFamily="@font/roboto_mono"
                            android:text="Male"
                            android:textColor="@color/app_primary_teal" />

                        <RadioButton
                            android:id="@+id/radio_female"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="16dp"
                            android:background="@color/app_content_white"
                            android:fontFamily="@font/roboto_mono"
                            android:text="Female"
                            android:textColor="@color/app_primary_teal" />

                        <RadioButton
                            android:id="@+id/radio_other"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/app_content_white"
                            android:fontFamily="@font/roboto_mono"
                            android:text="Other"
                            android:textColor="@color/app_primary_teal" />
                    </RadioGroup>

                    <!-- DOB -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/dob_input_layout"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:hint="Date of Birth (DD/MM/YYYY)"
                        android:textColorHint="@color/app_primary_teal">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/dob_input_edittext"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/app_content_white"
                            android:clickable="true"
                            android:focusable="false"
                            android:inputType="none"
                            android:textColor="@color/splash_primary_text"
                            android:textColorHighlight="@color/app_secondary_text_dark_grey"
                            android:textColorHint="@color/app_primary_teal" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Phone -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/phone_input_layout"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:hint="Phone Number"
                        android:textColorHint="@color/app_primary_teal">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/phone_input_edittext"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/app_content_white"
                            android:fontFamily="@font/roboto_mono"
                            android:inputType="phone"
                            android:textColor="@color/splash_primary_text"
                            android:textColorHighlight="@color/app_secondary_text_dark_grey"
                            android:textColorHint="@color/app_primary_teal" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Email -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/email_input_layout"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:hint="Email"
                        android:textColorHint="@color/app_primary_teal">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/email_input_edittext"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/app_content_white"
                            android:fontFamily="@font/roboto_mono"
                            android:inputType="textEmailAddress"
                            android:textColor="@color/splash_primary_text"
                            android:textColorHighlight="@color/app_secondary_text_dark_grey"
                            android:textColorHint="@color/app_primary_teal" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Password -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/password_input_layout"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:hint="Password"
                        android:textColorHint="@color/app_primary_teal"
                        app:endIconMode="password_toggle">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/password_input_edittext"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/app_content_white"
                            android:fontFamily="@font/roboto_mono"
                            android:inputType="textPassword"
                            android:textColor="@color/splash_primary_text"
                            android:textColorHighlight="@color/app_secondary_text_dark_grey"
                            android:textColorHint="@color/app_primary_teal" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Confirm Password -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/confirm_password_input_layout"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="24dp"
                        android:hint="Confirm Password"
                        android:textColorHint="@color/app_primary_teal"
                        app:endIconMode="password_toggle">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/confirm_password_input_edittext"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/app_icon_background"
                            android:fontFamily="@font/roboto_mono"
                            android:inputType="textPassword"
                            android:textColor="@color/splash_primary_text"
                            android:textColorHighlight="@color/app_secondary_text_dark_grey"
                            android:textColorHint="@color/app_primary_teal" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Doctor Fields -->
                    <LinearLayout
                        android:id="@+id/doctor_fields_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginBottom="16dp"
                            android:fontFamily="@font/roboto_mono"
                            android:text="More Details"
                            android:textColor="@color/splash_secondary_text"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/medical_license_input_layout"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="16dp"
                            android:background="@color/white"
                            android:hint="Medical License Number"
                            android:textColorHint="@color/app_primary_teal">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/medical_license_input_edittext"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/roboto_mono"
                                android:inputType="text"
                                android:textColorHint="@color/app_primary_teal" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/specialization_input_layout"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="16dp"
                            android:background="@color/white"
                            android:hint="Specialization"
                            android:minHeight="48dp"
                            android:paddingStart="10dp"
                            android:textColorHint="@color/app_primary_teal">

                            <AutoCompleteTextView
                                android:id="@+id/specialization_input_autocomplete"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/roboto_mono"
                                android:hint="Specialization"
                                android:inputType="none"
                                android:minHeight="48dp"
                                android:paddingStart="10dp"
                                android:textColor="@color/app_secondary_text_dark_grey"
                                android:textColorHint="@color/app_primary_teal" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/medical_council_input_layout"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="24dp"
                            android:background="@color/white"
                            android:hint="Medical Council"
                            android:minHeight="48dp"
                            android:paddingStart="10dp"
                            android:textColorHint="@color/app_primary_teal">

                            <AutoCompleteTextView
                                android:id="@+id/medical_council_input_autocomplete"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/roboto_mono"
                                android:hint="Medical Council Input"
                                android:inputType="none"
                                android:minHeight="48dp"
                                android:paddingStart="10dp"
                                android:textColor="@color/app_secondary_text_dark_grey"
                                android:textColorHint="@color/app_primary_teal" />
                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>

                    <!-- Terms Checkbox -->
                    <CheckBox
                        android:id="@+id/terms_checkbox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="15dp"
                        android:fontFamily="@font/roboto_mono"
                        android:text="I accept the Terms and Conditions"
                        android:textColor="@color/app_text_black"
                        android:textSize="14sp" />

                    <!-- Signup Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/signup_button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:backgroundTint="@color/app_primary_teal"
                        android:fontFamily="@font/roboto_mono"
                        android:text="Sign Up"
                        android:textColor="@color/app_content_white"
                        android:textSize="18sp"
                        app:cornerRadius="8dp" />
                </LinearLayout>
            </ScrollView>

            <!-- Divider -->
            <LinearLayout
                android:id="@+id/divider"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:gravity="center|center_vertical"
                android:orientation="horizontal">

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:background="@color/app_secondary_text_dark_grey" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="8dp"
                    android:fontFamily="@font/roboto_mono"
                    android:text=" OR "
                    android:textColor="@color/app_secondary_text_dark_grey"
                    android:textSize="12sp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:background="@color/app_secondary_text_dark_grey" />
            </LinearLayout>

            <!-- Google Signup -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/google_signup_button"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="5dp"
                android:backgroundTint="@color/google_blue"
                android:fontFamily="@font/roboto_mono"
                android:minHeight="50dp"
                android:padding="2dp"
                android:text="Sign in with Google"
                android:textColor="@color/app_content_white"
                android:textSize="16sp"
                app:cornerRadius="8dp"
                app:icon="@drawable/common_google_signin_btn_icon_dark"
                app:iconGravity="start"
                app:iconPadding="2dp"
                app:iconSize="32dp"
                app:iconTint="@null"
                app:strokeColor="@color/app_secondary_text_dark_grey"
                app:strokeWidth="1dp" />

            <TextView
                android:id="@+id/login_redirect"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/roboto_mono"
                android:text="Already a user? Login here"
                android:textColor="@color/app_primary_teal"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>
