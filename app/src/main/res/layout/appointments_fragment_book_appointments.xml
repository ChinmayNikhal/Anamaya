<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bookAppointmentScroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rounded_rectangle_outline"
    android:padding="16dp">

    <LinearLayout
        android:id="@+id/rootLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <!-- Doctor Search -->
        <Button
            android:id="@+id/btnSearchDoctor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:drawableLeft="@drawable/ic_search"
            android:drawablePadding="8dp"
            android:fontFamily="@font/roboto_mono"
            android:minHeight="50dp"
            android:text="Search Doctor"
            android:textSize="16sp"
            app:cornerRadius="15dp" />

        <!-- Date Picker -->
        <TextView
            android:id="@+id/tvSelectedDoctor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/roboto_mono"
            android:text="No doctor selected"
            android:textColor="@color/splash_primary_text"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/roboto_mono"
            android:text="Select Date:"
            android:textColor="@color/app_secondary_text_dark_grey"
            android:textColorHint="@color/app_primary_teal" />

        <TextView
            android:id="@+id/tvSelectedDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:background="@drawable/rounded_corner_teal_outline"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="@font/roboto_mono"
            android:minHeight="48dp"
            android:paddingVertical="10dp"
            android:paddingStart="10dp"
            android:text="Choose Date"
            android:textColor="@color/app_secondary_text_dark_grey"
            android:textColorHint="@color/app_primary_teal"
            android:textSize="16sp" />

        <!-- Time Picker -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/roboto_mono"
            android:text="Select Time:"
            android:textColor="@color/app_secondary_text_dark_grey"
            android:textColorHint="@color/app_primary_teal" />

        <TextView
            android:id="@+id/tvSelectedTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:background="@drawable/rounded_corner_teal_outline"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="@font/roboto_mono"
            android:minHeight="48dp"
            android:paddingVertical="10dp"
            android:paddingStart="10dp"
            android:text="Choose Time"
            android:textColor="@color/app_secondary_text_dark_grey"
            android:textColorHint="@color/app_primary_teal"
            android:textSize="16sp" />

        <!-- Check Availability Button -->
        <Button
            android:id="@+id/btnCheckAvailability"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/roboto_mono"
            android:minHeight="50dp"
            android:text="Check Availability"
            android:textSize="16sp"
            app:cornerRadius="15dp" />

        <!-- Availability Result -->
        <TextView
            android:id="@+id/tvAvailabilityResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:background="@drawable/rounded_corner_teal_outline"
            android:fontFamily="@font/roboto_mono"
            android:gravity="center"
            android:padding="10dp"
            android:text=""
            android:visibility="gone" />

        <!-- Purpose of Visit -->
        <EditText
            android:id="@+id/etPurpose"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/rounded_corner_teal_outline"
            android:fontFamily="@font/roboto_mono"
            android:hint="Purpose of Visit"
            android:minHeight="48dp"
            android:paddingVertical="10dp"
            android:paddingStart="10dp"
            android:textAlignment="textStart"
            android:textColor="@color/app_secondary_text_dark_grey"
            android:textColorHint="@color/app_primary_teal"
            android:textSize="16sp" />

        <!-- Book Appointment -->
        <Button
            android:id="@+id/btnBookAppointment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/roboto_mono"
            android:minHeight="50dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:text="Book Appointment"
            android:textSize="16sp"
            app:cornerRadius="15dp" />
    </LinearLayout>
</ScrollView>
