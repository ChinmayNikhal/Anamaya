<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:spacing="12dp">

        <!-- Medicine Search Bar -->
        <EditText
            android:id="@+id/medicineSearchInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/rounded_corner_teal_outline"
            android:drawableStart="@android:drawable/ic_menu_search"
            android:fontFamily="@font/roboto_mono"
            android:hint="Search medicine"
            android:padding="12dp"
            android:textStyle="bold" />

        <!-- Quantity Selector -->
        <LinearLayout
            android:id="@+id/QuantityPickerWidget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/manufacturerNameLabel"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:fontFamily="@font/roboto_mono"
                android:gravity="center"
                android:text="Quantity : "
                android:textAlignment="gravity"
                android:textColor="@color/teal_700"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/quantityMinus"
                android:layout_width="48dp"
                android:layout_height="match_parent"
                android:text="âˆ’" />

            <EditText
                android:id="@+id/quantityValue"
                android:layout_width="64dp"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="8dp"
                android:background="@drawable/rounded_corner_teal_outline"
                android:fontFamily="@font/roboto_mono"
                android:gravity="center"
                android:inputType="number"
                android:text="1"
                android:textSize="18sp" />

            <Button
                android:id="@+id/quantityPlus"
                android:layout_width="48dp"
                android:layout_height="match_parent"
                android:text="+" />
        </LinearLayout>

        <!-- Time Picker -->
        <LinearLayout
            android:id="@+id/TimePickerWidget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/manufacturerNameLabel3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/roboto_mono"
                android:text="Time to take medicine : "
                android:textAlignment="center"
                android:textColor="@color/teal_700"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/timePickerButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/roboto_mono"
                android:insetTop="6dp"
                android:insetBottom="6dp"
                android:paddingHorizontal="24dp"
                android:text="Select Time" />
        </LinearLayout>

        <!-- Food Timing Selector -->
        <LinearLayout
            android:id="@+id/foodTimingSelector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:fontFamily="@font/roboto_mono"
                android:text="When to take the medicine?"
                android:textColor="@color/teal_700"
                android:textSize="16sp"
                android:textStyle="bold" />

            <RadioGroup
                android:id="@+id/foodTimingGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/radio_before_eating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_corner_teal_outline"
                    android:fontFamily="@font/roboto_mono"
                    android:paddingHorizontal="10dp"
                    android:text="Before Eating"
                    android:textColor="@color/app_primary_teal" />

                <RadioButton
                    android:id="@+id/radio_after_eating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:background="@drawable/rounded_corner_teal_outline"
                    android:fontFamily="@font/roboto_mono"
                    android:paddingHorizontal="10dp"
                    android:text="After Eating"
                    android:textColor="@color/app_primary_teal" />
            </RadioGroup>
        </LinearLayout>

        <!-- Day Selector -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/roboto_mono"
            android:text="Select Days"
            android:textColor="@color/app_primary_teal"
            android:textSize="16sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/daysSelector"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ToggleButton
                    android:id="@+id/day_sun"
                    style="@style/DayCircleToggle"
                    android:layout_marginHorizontal="0.5dp"
                    android:layout_marginVertical="0.5dp"
                    android:fontFamily="@font/roboto_mono"
                    android:textColor="@color/app_primary_teal"
                    android:textOff="S"
                    android:textOn="S" />

                <ToggleButton
                    android:id="@+id/day_mon"
                    style="@style/DayCircleToggle"
                    android:layout_marginHorizontal="0.5dp"
                    android:layout_marginVertical="0.5dp"
                    android:fontFamily="@font/roboto_mono"
                    android:textColor="@color/app_primary_teal"
                    android:textOff="M"
                    android:textOn="M" />

                <ToggleButton
                    android:id="@+id/day_tue"
                    style="@style/DayCircleToggle"
                    android:layout_marginHorizontal="0.5dp"
                    android:layout_marginVertical="0.5dp"
                    android:fontFamily="@font/roboto_mono"
                    android:textColor="@color/app_primary_teal"
                    android:textOff="T"
                    android:textOn="T" />

                <ToggleButton
                    android:id="@+id/day_wed"
                    style="@style/DayCircleToggle"
                    android:layout_marginHorizontal="0.5dp"
                    android:layout_marginVertical="0.5dp"
                    android:fontFamily="@font/roboto_mono"
                    android:textColor="@color/app_primary_teal"
                    android:textOff="W"
                    android:textOn="W" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ToggleButton
                    android:id="@+id/day_thu"
                    style="@style/DayCircleToggle"
                    android:layout_marginHorizontal="0.5dp"
                    android:fontFamily="@font/roboto_mono"
                    android:textColor="@color/app_primary_teal"
                    android:textOff="T"
                    android:textOn="T"
                    android:layout_marginVertical="0.5dp" />

                <ToggleButton
                    android:id="@+id/day_fri"
                    style="@style/DayCircleToggle"
                    android:layout_marginHorizontal="0.5dp"
                    android:layout_marginVertical="0.5dp"
                    android:fontFamily="@font/roboto_mono"
                    android:textColor="@color/app_primary_teal"
                    android:textOff="F"
                    android:textOn="F" />

                <ToggleButton
                    android:id="@+id/day_sat"
                    style="@style/DayCircleToggle"
                    android:layout_marginHorizontal="0.5dp"
                    android:layout_marginVertical="0.5dp"
                    android:fontFamily="@font/roboto_mono"
                    android:textColor="@color/app_primary_teal"
                    android:textOff="S"
                    android:textOn="S" />
            </LinearLayout>

        </LinearLayout>

        <!-- Add Button -->
        <Button
            android:id="@+id/btnAddNewPrescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:backgroundTint="?attr/colorPrimary"
            android:fontFamily="@font/roboto_mono"
            android:padding="12dp"
            android:text="Add to Schedule"
            android:textColor="@android:color/white" />
    </LinearLayout>
</ScrollView>
