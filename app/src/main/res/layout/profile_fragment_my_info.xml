<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2"
    android:fillViewport="true"
    tools:context=".profile.FragmentMyInfo">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Personal Details Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/personal_details_section"
            android:textColor="@color/app_primary_teal"
            android:textSize="20sp"
            android:textStyle="bold"
            android:fontFamily="@font/roboto_mono"
            android:layout_marginBottom="16dp"/>

        <!-- Full Name (Editable) -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/my_info_full_name_input_layout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/full_name_hint"
            android:layout_marginBottom="16dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/my_info_full_name_edittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_rectangle_outline"
                android:fontFamily="@font/roboto_mono"
                android:inputType="textPersonName"
                android:textColor="@color/app_secondary_text_dark_grey" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Email (Non-editable, Display Only) -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:fontFamily="@font/roboto_mono"
            android:text="@string/email_label"
            android:textColor="@color/app_text_black"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/my_info_email_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:background="@drawable/rounded_edittext_background"
            android:textColor="@color/app_secondary_text_dark_grey"
            android:textSize="16sp"
            android:fontFamily="@font/roboto_mono"
            android:layout_marginBottom="16dp"
            tools:text="john.doe@example.com"/>

        <!-- Phone Number (Editable) -->
        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:fontFamily="@font/roboto_mono"
            android:text="Phone Number"
            android:textColor="@color/app_text_black"
            android:textSize="16sp" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/my_info_phone_input_layout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/phone_number_hint"
            android:layout_marginBottom="16dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/my_info_phone_edittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_rectangle_outline"
                android:fontFamily="@font/roboto_mono"
                android:inputType="phone"
                android:textColor="@color/app_secondary_text_dark_grey" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Gender (Non-editable, Display Only - can be made editable via dialog later) -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/gender_label"
            android:textColor="@color/app_text_black"
            android:textSize="16sp"
            android:fontFamily="@font/roboto_mono"
            android:layout_marginBottom="4dp"/>
        <TextView
            android:id="@+id/my_info_gender_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:background="@drawable/rounded_edittext_background"
            android:textColor="@color/app_secondary_text_dark_grey"
            android:textSize="16sp"
            android:fontFamily="@font/roboto_mono"
            android:layout_marginBottom="16dp"
            tools:text="Male"/>

        <!-- Date of Birth (Non-editable, Display Only - can be made editable via DatePicker later) -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/date_of_birth_label"
            android:textColor="@color/app_text_black"
            android:textSize="16sp"
            android:fontFamily="@font/roboto_mono"
            android:layout_marginBottom="4dp"/>
        <TextView
            android:id="@+id/my_info_dob_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:background="@drawable/rounded_edittext_background"
            android:textColor="@color/app_secondary_text_dark_grey"
            android:textSize="16sp"
            android:fontFamily="@font/roboto_mono"
            android:layout_marginBottom="24dp"
            tools:text="01/01/1990"/>

        <!-- Medical Details Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/medical_details_section"
            android:textColor="@color/app_primary_teal"
            android:textSize="20sp"
            android:textStyle="bold"
            android:fontFamily="@font/roboto_mono"
            android:layout_marginBottom="16dp"/>

        <!-- Blood Type (Spinner/Dropdown) -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/blood_type_label"
            android:textColor="@color/app_text_black"
            android:textSize="16sp"
            android:fontFamily="@font/roboto_mono"
            android:layout_marginBottom="4dp"/>

        <Spinner
            android:id="@+id/my_info_blood_type_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/rounded_edittext_background"
            android:drawableEnd="@drawable/ic_arrow_drop_down"
            android:minHeight="48dp"
            android:padding="8dp"
            android:spinnerMode="dropdown" />


        <!-- Allergies (Editable, Multi-line) -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Allergies"
            android:textColor="@color/app_text_black"
            android:textSize="16sp"
            android:fontFamily="@font/roboto_mono"
            android:layout_marginBottom="4dp"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/my_info_allergies_input_layout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/allergies_hint"
            android:layout_marginBottom="16dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/my_info_allergies_edittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_rectangle_outline"
                android:fontFamily="@font/roboto_mono"
                android:gravity="top"
                android:inputType="textMultiLine"
                android:lines="3"
                android:textColor="@color/app_secondary_text_dark_grey" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Medical Conditions (Editable, Multi-line) -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Medical Conditions"
            android:textColor="@color/app_text_black"
            android:textSize="16sp"
            android:fontFamily="@font/roboto_mono"
            android:layout_marginBottom="4dp"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/my_info_medical_conditions_input_layout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/medical_conditions_hint"
            android:layout_marginBottom="24dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/my_info_medical_conditions_edittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_rectangle_outline"
                android:fontFamily="@font/roboto_mono"
                android:gravity="top"
                android:inputType="textMultiLine"
                android:lines="3"
                android:textColor="@color/app_secondary_text_dark_grey" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Professional Details Section (Visibility Gone by default) -->
        <LinearLayout
            android:id="@+id/professional_details_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"> <!-- Default visibility is GONE -->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:fontFamily="@font/roboto_mono"
                android:text="@string/professional_details_section"
                android:textColor="@color/app_primary_teal"
                android:textSize="20sp"
                android:textStyle="bold" />

            <!-- Specialization (Non-editable, Display Only) -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:fontFamily="@font/roboto_mono"
                android:text="Specialization"
                android:textColor="@color/app_secondary_text_dark_grey"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/my_info_specialization_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@drawable/rounded_rectangle_outline"
                android:fontFamily="@font/roboto_mono"
                android:padding="12dp"
                android:textColor="@color/app_secondary_text_dark_grey"
                android:textColorHint="@color/app_secondary_text_dark_grey"
                android:textSize="16sp"
                tools:text="Cardiology" />

            <!-- Medical License Number (Non-editable, Display Only) -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:fontFamily="@font/roboto_mono"
                android:text="Medical License"
                android:textColor="@color/app_secondary_text_dark_grey"
                android:textColorHint="@color/app_secondary_text_dark_grey"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/my_info_medical_license_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@drawable/rounded_rectangle_outline"
                android:fontFamily="@font/roboto_mono"
                android:padding="12dp"
                android:textColor="@color/app_secondary_text_dark_grey"
                android:textColorHint="@color/app_secondary_text_dark_grey"
                android:textSize="16sp"
                tools:text="LIC123456789" />

            <!-- Medical Council (Non-editable, Display Only) -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:fontFamily="@font/roboto_mono"
                android:text="Medical Council"
                android:textColor="@color/app_secondary_text_dark_grey"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/my_info_medical_council_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:background="@drawable/rounded_rectangle_outline"
                android:fontFamily="@font/roboto_mono"
                android:padding="12dp"
                android:textColor="@color/app_secondary_text_dark_grey"
                android:textColorHint="@color/app_secondary_text_dark_grey"
                android:textSize="16sp"
                tools:text="Indian Medical Council" />

        </LinearLayout>

        <!-- Emergency Contact Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/emergency_contact_section"
            android:textColor="@color/app_primary_teal"
            android:textSize="20sp"
            android:textStyle="bold"
            android:fontFamily="@font/roboto_mono"
            android:layout_marginBottom="16dp"/>

        <!-- Emergency Contact Name (Editable) -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/my_info_emergency_contact_name_input_layout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:hint="@string/emergency_contact_name_hint"
            app:boxCornerRadiusBottomEnd="20dp"
            app:boxCornerRadiusBottomStart="20dp"
            app:boxCornerRadiusTopEnd="20dp"
            app:boxCornerRadiusTopStart="20dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/my_info_emergency_contact_name_edittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_rectangle_outline"
                android:fontFamily="@font/roboto_mono"
                android:inputType="textPersonName"
                android:textColor="@color/app_secondary_text_dark_grey"
                android:textColorHint="@color/app_secondary_text_dark_grey" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Emergency Contact Phone (Editable) -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/my_info_emergency_contact_phone_input_layout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/emergency_contact_phone_hint"
            android:layout_marginBottom="24dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/my_info_emergency_contact_phone_edittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_rectangle_outline"
                android:fontFamily="@font/roboto_mono"
                android:inputType="phone"
                android:textColor="@color/app_secondary_text_dark_grey"
                android:textColorHint="@color/app_secondary_text_dark_grey" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Save Changes Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/my_info_save_changes_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/save_changes_button"
            android:fontFamily="@font/roboto_mono"
            android:paddingVertical="12dp"
            android:textSize="18sp"
            android:textColor="@color/app_content_white"
            app:backgroundTint="@color/app_primary_teal"
            app:cornerRadius="8dp" />

    </LinearLayout>
</ScrollView>

