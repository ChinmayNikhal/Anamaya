<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="@color/app_logo_background"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@drawable/rounded_corner_teal_outline"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvPaymentStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="15dp"
            android:fontFamily="@font/roboto_mono"
            android:gravity="center"
            android:padding="5dp"
            android:paddingBottom="12dp"
            android:text="Order Placed Successfully"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/app_primary_teal"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvOrderId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_margin="5dp"
            android:fontFamily="@font/roboto_mono"
            android:padding="5dp"
            android:text="Order ID: -"
            android:textColor="@color/app_secondary_text_dark_grey" />

        <TextView
            android:id="@+id/tvTransactionId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_margin="5dp"
            android:fontFamily="@font/roboto_mono"
            android:padding="5dp"
            android:text="Transaction ID: -"
            android:textColor="@color/app_secondary_text_dark_grey" />

        <TextView
            android:id="@+id/tvDeliveryAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_margin="5dp"
            android:fontFamily="@font/roboto_mono"
            android:padding="5dp"
            android:text="Delivered to: -"
            android:textColor="@color/app_secondary_text_dark_grey" />

        <TextView
            android:id="@+id/tvArrivalDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_margin="5dp"
            android:fontFamily="@font/roboto_mono"
            android:padding="5dp"
            android:paddingBottom="20dp"
            android:text="Arriving on: -"
            android:textColor="@color/app_secondary_text_dark_grey" />

        <Button
            android:id="@+id/btnBackToCart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:backgroundTint="@color/app_primary_teal"
            android:gravity="center"
            android:minWidth="100dp"
            android:text="Back to Cart"
            android:textColor="@android:color/white"
            app:cornerRadius="12dp" />
    </LinearLayout>
</ScrollView>
