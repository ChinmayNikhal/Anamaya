<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp"
    android:layout_margin="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:id="@+id/popup_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Popup Title"
            android:textColor="@color/app_primary_teal"
            android:textSize="22sp"
            android:textStyle="bold"
            android:fontFamily="@font/roboto_mono"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:id="@+id/popup_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="This is the content of the popup window."
            android:textColor="@color/app_text_black"
            android:textSize="16sp"
            android:fontFamily="@font/roboto_mono"
            android:gravity="center_horizontal"
            android:layout_marginBottom="24dp"/>

        <!-- Address Fields with Labels -->
        <LinearLayout
            android:id="@+id/address_fields_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="Address 1"
                android:textColor="@color/app_text_black"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/address_input_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:hint="Enter address 1"
                android:inputType="textPostalAddress"
                android:textColor="@color/app_text_black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="Address 2"
                android:textColor="@color/app_text_black"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/address_input_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:hint="Enter address 2"
                android:inputType="textPostalAddress"
                android:textColor="@color/app_text_black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="Address 3"
                android:textColor="@color/app_text_black"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/address_input_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:hint="Enter address 3"
                android:inputType="textPostalAddress"
                android:textColor="@color/app_text_black" />
        </LinearLayout>

        <!-- Change Password Fields -->
        <LinearLayout
            android:id="@+id/password_fields_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_marginTop="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Old Password"
                android:textColor="@color/app_secondary_text_dark_grey"
                android:textSize="14sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/password_input_old"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/app_primary_teal"
                android:hint="Enter your old password"
                android:inputType="textPassword"
                android:padding="12dp"
                android:textColor="@color/app_text_black" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="New Password"
                android:textColor="@color/app_secondary_text_dark_grey"
                android:textSize="14sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/password_input_new"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/app_primary_teal"
                android:hint="Enter new password"
                android:inputType="textPassword"
                android:padding="12dp"
                android:textColor="@color/app_text_black" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Confirm New Password"
                android:textColor="@color/app_secondary_text_dark_grey"
                android:textSize="14sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/password_input_confirm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/app_primary_teal"
                android:hint="Confirm new password"
                android:inputType="textPassword"
                android:padding="12dp"
                android:textColor="@color/app_text_black" />
        </LinearLayout>

        <!-- Save/ Close Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/popup_close_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/popup_close_button"
            android:fontFamily="@font/roboto_mono"
            android:paddingHorizontal="24dp"
            android:paddingVertical="10dp"
            android:textSize="16sp"
            android:textColor="@color/app_content_white"
            app:backgroundTint="@color/app_primary_teal"
            app:cornerRadius="8dp"
            android:layout_gravity="center_horizontal"/>


    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
