<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash_background_gradient"> <com.google.android.material.card.MaterialCardView
    android:id="@+id/login_card"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_rectangle_login_card"
    app:cardBackgroundColor="@android:color/transparent"
    app:cardCornerRadius="0dp"
    app:cardElevation="0dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="1.0"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_bias="0.5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="525dp"
        android:background="@drawable/rounded_rectangle_login_card"
        android:backgroundTint="#EFFFFF"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:id="@+id/login_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="24dp"
            android:fontFamily="@font/roboto_mono"
            android:text="Login"
            android:textColor="@color/teal_700"
            android:textSize="30sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/user_type_selector_container"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="12dp"
            android:background="@drawable/selector_pill_outer_stroke"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/member_option_tv"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:background="@drawable/selector_pill_left_segment_bg"
                android:clickable="true"
                android:focusable="true"
                android:fontFamily="@font/roboto_mono"
                android:gravity="center"
                android:minHeight="36dp"
                android:paddingVertical="6dp"
                android:text="Member"
                android:textColor="@color/selector_pill_text_color"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:ignore="TouchTargetSizeCheck" />

            <TextView
                android:id="@+id/doctor_option_tv"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:background="@drawable/selector_pill_right_segment_bg"
                android:clickable="true"
                android:focusable="true"
                android:fontFamily="@font/roboto_mono"
                android:gravity="center"
                android:minHeight="36dp"
                android:paddingVertical="6dp"
                android:text="Doctor"
                android:textColor="@color/selector_pill_text_color"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:ignore="TouchTargetSizeCheck" />
        </LinearLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/email_input_layout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="#FFFF"
            android:hint="Email"
            android:outlineProvider="bounds"
            app:boxStrokeColor="@color/teal_700"
            app:boxStrokeWidth="1dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/email_input_edittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFF"
                android:fontFamily="@font/roboto_mono"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:minHeight="48dp"
                android:outlineProvider="bounds"
                android:shadowColor="#00897B"
                android:textColor="@color/app_secondary_text_dark_grey"
                android:textColorHighlight="@color/app_secondary_text_dark_grey"
                android:textColorHint="@color/app_secondary_text_dark_grey" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/password_input_layout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:background="#FFFF"
            android:hint="Password"
            android:outlineProvider="bounds"
            app:boxStrokeColor="@color/teal_700"
            app:boxStrokeWidth="1dp"
            app:endIconMode="password_toggle">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/password_input_edittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFF"
                android:drawableTint="#00897B"
                android:fontFamily="@font/roboto_mono"
                android:foregroundTint="#00897B"
                android:hint="Password"
                android:inputType="textPassword"
                android:minHeight="48dp"
                android:outlineProvider="bounds"
                android:shadowColor="#00897B"
                android:textColor="@color/app_secondary_text_dark_grey"
                android:textColorHighlight="@color/app_secondary_text_dark_grey"
                android:textColorHint="@color/app_secondary_text_dark_grey"
                tools:ignore="TouchTargetSizeCheck" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/login_button"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="16dp"
            android:background="@color/app_primary_teal"
            android:fontFamily="@font/roboto_mono"
            android:paddingVertical="1dp"
            android:text="Login"
            android:textColor="@color/app_content_white"
            android:textSize="14sp"
            app:cornerRadius="8dp"
            tools:ignore="TouchTargetSizeCheck" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="@color/app_secondary_text_dark_grey" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:fontFamily="@font/roboto_mono"
                android:text=" OR "
                android:textColor="@color/app_secondary_text_dark_grey" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="@color/app_secondary_text_dark_grey" />
        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/google_signup_button"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="24dp"
            android:backgroundTint="@color/google_blue"
            android:fontFamily="@font/roboto_mono"
            android:padding="2dp"
            android:text="Sign in with Google"
            android:textColor="@color/app_content_white"
            android:textSize="16sp"
            app:cornerRadius="8dp"
            app:icon="@drawable/common_google_signin_btn_icon_dark"
            app:iconGravity="start"
            app:iconPadding="0dp"
            app:iconSize="32dp"
            app:iconTint="@null"
            app:strokeColor="@color/app_secondary_text_dark_grey"
            app:strokeWidth="1dp"
            tools:ignore="TextContrastCheck,TouchTargetSizeCheck" />

        <TextView
            android:id="@+id/signup_redirect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/roboto_mono"
            android:paddingBottom="8dp"
            android:text="New user? Signup here"
            android:textColor="@color/app_primary_teal"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>
