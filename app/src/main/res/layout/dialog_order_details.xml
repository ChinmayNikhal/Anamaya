<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_rectangle_outline"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvDialogOrderId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="2.5dp"
            android:fontFamily="@font/roboto_mono"
            android:paddingVertical="2dp"
            android:text="Order ID: #123"
            android:textColor="@color/app_primary_teal"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvTransactionId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="2.5dp"
            android:fontFamily="@font/roboto_mono"
            android:paddingVertical="2dp"
            android:text="Transaction ID: TXN0987"
            android:textColor="@color/app_primary_teal"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvOrderTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="2.5dp"
            android:fontFamily="@font/roboto_mono"
            android:paddingVertical="2dp"
            android:text="Time: 12:30 PM"
            android:textColor="@color/app_secondary_text_dark_grey"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tvOrderDateDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="2.5dp"
            android:fontFamily="@font/roboto_mono"
            android:paddingVertical="2dp"
            android:text="Date: 2025-07-17"
            android:textColor="@color/app_secondary_text_dark_grey"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tvMedsListTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="2.5dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/roboto_mono"
            android:paddingVertical="2dp"
            android:text="Ordered Medications:"
            android:textColor="@color/app_secondary_text_dark_grey"
            android:textSize="18sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/medsListContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="10dp" />

        <TextView
            android:id="@+id/tvTotalAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="2.5dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/roboto_mono"
            android:paddingVertical="2dp"
            android:text="Total: â‚¹820"
            android:textColor="@color/app_secondary_text_dark_grey"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvDeliveryDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="2.5dp"
            android:fontFamily="@font/roboto_mono"
            android:paddingVertical="2dp"
            android:text="Delivered on: 2025-07-18"
            android:textColor="@color/app_secondary_text_dark_grey"
            android:textSize="18sp" />


        <!-- MyOrders-only -->
        <TextView
            android:id="@+id/tvShippingAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address: 123 Street"
            android:textColor="@color/app_secondary_text_dark_grey"
            android:textSize="18sp"
            android:visibility="gone" />

        <!-- Add Download Button -->
        <Button
            android:id="@+id/btnDownloadInvoice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Download Invoice"
            android:layout_marginTop="10dp"
            android:visibility="gone" />

    </LinearLayout>
</ScrollView>
